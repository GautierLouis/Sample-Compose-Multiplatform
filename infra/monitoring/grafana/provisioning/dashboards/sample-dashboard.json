{
  "id": null,
  "title": "Ktor Server Overview",
  "tags": ["ktor", "server", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "timeseries",
      "title": "CPU Usage",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{container=\"ktor-server\"}[1m])",
          "legendFormat": "CPU Usage",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Memory Usage",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{container=\"ktor-server\"}",
          "legendFormat": "Memory Usage",
          "refId": "B"
        }
      ],
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "HTTP Requests (Micrometer)",
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count[1m])) by (uri)",
          "legendFormat": "{{uri}}",
          "refId": "C"
        }
      ],
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 }
    }
  ]
}
